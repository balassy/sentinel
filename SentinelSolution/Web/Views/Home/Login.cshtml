@using Sentinel.Web.Resources.Home
@model Sentinel.Web.Models.Home.LoginVM

@{
	ViewBag.Title = LoginRes.Title;
}


<div class="container">
	@using (Html.BeginForm( MVC.Home.Login( (string) ViewBag.ReturnUrl ), FormMethod.Post, new { @class = "my-form-mini", role = "form" }))
	{
		@Html.AntiForgeryToken()

		<div class="page-header">
			<h1>@ViewBag.Title</h1>
		</div>
			
		@Html.ValidationSummary(false, null, new { @class = "list-unstyled" } )

		@*<div class="form-group input-group">
			<span class="input-group-addon">
				<span class="glyphicon glyphicon-user"></span>
			</span>
			@Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-lg", placeholder = "Felhasználó név", required = "required", autofocus = "autofocus" })
		</div>*@

		<div class="form-group input-group">
			<span class="input-group-addon">
				<span class="glyphicon glyphicon-lock" title="@LoginRes.Password"></span>
			</span>
			@Html.PasswordFor( m => m.Password, new { @class = "form-control input-lg", placeholder = LoginRes.Password, required = "required", autofocus = "autofocus" } )
		</div>
			
		<div class="form-group">
			<label class="checkbox">
				@Html.CheckBoxFor(m => m.RememberMe)
				@Html.LabelFor(m => m.RememberMe)
			</label>
		</div>
			
		<div class="form-group">
			<input type="submit" value="@LoginRes.SignIn" class="btn btn-lg btn-primary btn-block" />
		</div>	
	}
</div>


@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}